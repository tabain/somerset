nav.nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/greystar/partials/navi_bar.html'")

section#welcome
    .container-fluid
        .row
            .col-lg-4.col-md-6.col-sm-6.col-xs-12.col-lg-offset-4.col-md-offset-3.col-sm-offset-3
                div(ng-controller="Welcome")
                    h1#locationName().text-center {{guest.location}}
                    h4.text-center.color-light-gray Welcome!
                    p.text-center
                        span(ng-show="guest.company")
                            | Hi {{guest.name | capitalize}} from {{guest.company | capitalize}}.
                            | Thanks for checking in at {{guest.location | capitalize}} to see {{guest.whoAreYou | capitalize}}.
                            | Please proceed to the reception and provide us with a photo Id (e.g. drivers license, national ID or passport).
                        span(ng-show="guest.purposeOfVisit")
                            | Hi {{guest.name | capitalize}}.
                            | Thanks for checking in at {{guest.location | capitalize}} to {{guest.purposeOfVisit | capitalize}}.
                            | Please proceed to the reception and provide us with a photo Id(e.g. drivers license, national ID or passport).
                        span(ng-show="guest.residentName || guest.event || guest.roomNo")
                            | Hi {{guest.name | capitalize}}.
                            | Thanks for checking in at {{guest.location | capitalize}} to visit {{guest.residentName | capitalize}}{{guest.event | capitalize}}{{guest.roomNo | capitalize}}.
                            | Please proceed to the reception and provide us with a photo Id (e.g. drivers license, national ID or passport).
                    .space
                    button.btn.btn-sm.btn-info.pull-right(ng-click="checkin()") Return to Check-in

footer(ng-include="'views/greystar/views/partials/footer.html'")
