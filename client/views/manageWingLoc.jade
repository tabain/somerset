nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")

section
    .container-fluid(ng-controller="ManageWingLocs")
        .row
            .col-lg-12
                h1.text-center Manage Wing Locations
                button(ng-click="addWingLoc()").pull-right Create Wing Location
        .row
            .col-lg-12
                table.table.table-condensed
                    thead
                        tr
                            th  Location
                            th  Wing
                            th
                    tbody
                        tr(ng-repeat="w in winglocs | orderBy:'-createdAt'" ng-include="'views/partials/wingloc_row.html'")


        .modal.fade#addWingLoc
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | New Wing Location
                    .modal-body
                        div(ng-include="'views/partials/create_wingloc.html'")
        .modal.fade#editWingLoc
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Edit Wing Location
                    .modal-body
                        div(ng-include="'views/partials/edit_wingloc.html'")

        .modal.fade#deleteWingLoc
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Delete Wing Location
                    .modal-body
                        p Are you sure you want to delete this Wing Location?
                    .modal-footer
                        btn.btn.btn-primary(ng-click="confirmDeleted()") Confirm
                        btn.btn.btn-danger(ng-click="cancel()") Cancel

footer(ng-include="'views/partials/footer.html'")