nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")

section
    .container-fluid(ng-controller="ManageRooms")
        .row
            .col-lg-12
                h1.text-center Manage Rooms
                button(ng-click="addRoom()").pull-right Create Room
        .row
            .col-lg-12
                table.table.table-condensed
                    thead
                        tr
                            th  Room
                            th  Location
                            th  Wing
                            th
                    tbody
                        tr(ng-repeat="r in rooms | orderBy:'-createdAt'" ng-include="'views/partials/room_row.html'")


        .modal.fade#addRoom
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | New Room
                    .modal-body
                        div(ng-include="'views/partials/create_room.html'")
        .modal.fade#editRoom
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Edit Room
                    .modal-body
                        div(ng-include="'views/partials/edit_room.html'")

        .modal.fade#deleteRoom
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Delete Room
                    .modal-body
                        p Are you sure you want to delete this Room {{roomdeleted.room}}?
                    .modal-footer
                        btn.btn.btn-primary(ng-click="confirmDeleted()") Confirm
                        btn.btn.btn-danger(ng-click="cancel()") Cancel

footer(ng-include="'views/partials/footer.html'")