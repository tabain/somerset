nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")

section
    .container-fluid(ng-controller="ManageMembers")
        .row
            .col-lg-12
                h1.text-center Manage Members
                button(ng-click="addMember()").pull-right Create Member
        .row
            .col-lg-12
                table.table.table-condensed
                    thead
                        tr
                            th  Name
                            th  age
                            th  Email
                            th  Phone
                            th  Ext
                            th  Organisation
                            th  Mobile
                            th  Wing
                            th  Location
                            th  Room
                            th
                    tbody
                        tr(ng-repeat="m in members | orderBy:'-createdAt'" ng-include="'views/partials/member_row.html'")


        .modal.fade#addMember
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | New Member
                    .modal-body
                        div(ng-include="'views/partials/create_member.html'")
        .modal.fade#editMember
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Edit Member
                    .modal-body
                        div(ng-include="'views/partials/edit_member.html'")

        .modal.fade#deleteMember
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Delete Member
                    .modal-body
                        p Are you sure you want to delete this Member?
                    .modal-footer
                        btn.btn.btn-primary(ng-click="confirmDeleted()") Confirm
                        btn.btn.btn-danger(ng-click="cancel()") Cancel

footer(ng-include="'views/partials/footer.html'")