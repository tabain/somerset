nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")

section
    .container-fluid(ng-controller="ManageWings")
        .row
            .col-lg-12
                h1.text-center Manage Wings
                button(ng-click="addWing()").btn.btn-default.pull-right Create Wing
        .row
            .col-lg-12
                table.table.table-condensed
                    thead
                        tr
                            th  Name
                            th
                    tbody
                        tr(ng-repeat="w in wings | orderBy:'-createdAt'" ng-include="'views/partials/wing_row.html'")


        .modal.fade#addWing
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | New Wing
                    .modal-body
                        div(ng-include="'views/partials/create_wing.html'")
        .modal.fade#editWing
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Edit Wing
                    .modal-body
                        div(ng-include="'views/partials/edit_wing.html'")

        .modal.fade#deleteWing
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Delete Wing
                    .modal-body
                        p Are you sure you want to delete this wing?
                    .modal-footer
                        btn.btn.btn-primary(ng-click="confirmDeleted()") Confirm
                        btn.btn.btn-danger(ng-click="cancel()") Cancel

footer(ng-include="'views/partials/footer.html'")