nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")

section
    .container-fluid(ng-controller="ManageAdmins")
        .row
            .col-lg-12
                h1.text-center Manage Admins
                button(ng-click="addUser()").btn.btn-default.pull-right Create User
        .row
            .col-lg-12
                table.table.table-condensed
                    thead
                        tr
                            th  Name
                            th  Email
                            th  Location
                            th  Role
                            th
                    tbody
                        tr(ng-repeat="admin in admins | orderBy:'-createdAt'" ng-include="'views/partials/admin_row.html'")


        .modal.fade#addUser
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | New User
                    .modal-body
                        div(ng-include="'views/partials/create_admin.html'")
        .modal.fade#editAdmin
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Edit Admin
                    .modal-body
                        div(ng-include="'views/partials/edit_admin.html'")

        .modal.fade#deleteAdmin
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Delete Guest
                    .modal-body
                        p Are you sure you want to delete this admin?
                    .modal-footer
                        btn.btn.btn-primary(ng-click="confirmDeleted()") Confirm
                        btn.btn.btn-danger(ng-click="cancel()") Cancel

footer(ng-include="'views/partials/footer.html'")