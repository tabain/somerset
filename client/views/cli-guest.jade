nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")
section(ng-controller="client")
    .container-fluid
        .row
            .col-lg-4.col-md-6.col-sm-6.col-xs-8.col-lg-offset-4.col-md-offset-3.col-sm-offset-3.col-xs-offset-2
                h3.title.text-center {{defaultWin.name}} Check-In
                div()
                    .form-group
                        label Search Member
                        input.form-control(name="searchmember" placeholder="Name of member" ng-model="member" type="text")
                    .form-group
                        button(ng-click="search(member)").btn.btn-primary.btn-lg.btn-block Find Member
                div(ng-show= 'disablesearch')
                    h5 Please select one

                    div(ng-repeat="m in members")
                        h2  {{m.name}}
                        p
                            strong Company name:
                            |   {{m.organisation.name}}
                            br
                            strong Location:
                            |   {{m.location.location}}
                            br
                            strong Room:
                            |   {{m.room.room}}
                        button.btn.btn-default(ng-click="selectOne(m)") Select

        .modal.fade#defaultwing
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Set Wing
                    .modal-body
                        p Please set default wing

                        form(name="wingform" ng-submit="submitForm(wingform.$valid)" ng-model-options="{ updateOn: 'blur', debounce: { default: 2000, blur: 100 } }" novalidate)

                            .form-group
                                label Wing
                                select.form-control(name="wing" ng-model="wing" ng-options="w.name | capitalize for w in wings" required)
                                p.help-block(ng-show="wingform.wing.$invalid && !wingform.wing.$pristine") Please provide us with a Wing
                            .form-group
                                button(type="submit").btn.btn-primary.btn-lg.btn-block Set