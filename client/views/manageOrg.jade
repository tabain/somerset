nav.navbar.navbar-default.navbar-static-top(role='navigation' ng-controller="NaviController" ng-include="'views/partials/navi_bar.html'")

section
    .container-fluid(ng-controller="ManageOrgs")
        .row
            .col-lg-12
                h1.text-center Manage Organisations
                button(ng-click="addOrg()").pull-right Create Organisation
        .row
            .col-lg-12
                table.table.table-condensed
                    thead
                        tr
                            th  Name
                            th  Email
                            th  Phone
                            th  Ext
                            th  Fax
                            th  Mobile
                            th  Wing
                            th  Location
                            th  Room
                            th
                    tbody
                        tr(ng-repeat="o in orgs | orderBy:'-createdAt'" ng-include="'views/partials/org_row.html'")


        .modal.fade#addOrg
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | New Organisation
                    .modal-body
                        div(ng-include="'views/partials/create_org.html'")
        .modal.fade#editOrg
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Edit Organisation
                    .modal-body
                        div(ng-include="'views/partials/edit_org.html'")

        .modal.fade#deleteOrg
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title
                            i.glyphicon.glyphicon-user.span-right-margin
                            | Delete Organisation
                    .modal-body
                        p Are you sure you want to delete this Organisation?
                    .modal-footer
                        btn.btn.btn-primary(ng-click="confirmDeleted()") Confirm
                        btn.btn.btn-danger(ng-click="cancel()") Cancel

footer(ng-include="'views/partials/footer.html'")